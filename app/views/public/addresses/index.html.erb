<p></p>


<div class ="container">
  <div class ="col-md-4">
    <h3 class ="bg-light">配送先登録/一覧</h3>
  </div>
  <div class ="row">
    <div class ="col-md-8">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <table class ="table table-borderless">

        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field:postal_code, placeholder:"0000000" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field:address,placeholder:"東京都渋谷区代々木神園0-0" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= f.text_field:name, placeholder:"令和道子" %></td>
          <td></td>
          <td><%= f.submit '新規登録',class:"btn btn-success mr-5" %></td>
        </tr>

      </table>
      <% end %>
      <table class="table table-bordered">
        <tr class="table-active">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <td></td>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to '編集する', edit_addresses_path(address.id), class:"btn btn-success" %><%= link_to '削除する', destroy_addresses_path(address.id), method: :delete, class:"btn btn-danger ml-2" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>