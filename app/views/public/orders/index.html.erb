<p></p>

<div class ="container">
  <div class="col-md-3">
    <h3 class ="bg-light">注文履歴一覧</h3>
  </div>
  <div class ="row">
    <div class ="col-md-12">
      <table class ="table table-bordered mt-5">
        <tr class="table-light">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %><br /><%= order.address %><br /><%= order.name %></td>
          <td>
            <% @order_details.each do |order_detail| %>
            <% @total += order_detail.tax_included_price * order_detail.amount %>
            <%= order_detail.item.name %><br />
            <% end %>
          </td>
          <td><%= @total %>円</td>
          <td><%= order.order_status_i18n %></td>
          <td><%= link_to '表示する', show_orders_path(order), class:"btn btn-primary d-flex justify-content-center text-alignment-center" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>