<p></p>

<div class ="col-md-3">
  <h3 class ="bg-light"><%#= @item.genre.name %>一覧</h3>
</div>

<div class ="container">
  <div class ="row mt-5"></div>
    <div class ="col-md-9">
        <div class ="mt-3 d-flex flex-wrap">
          <% @genreitems.each do |item| %>
          <div class ="mr-3  mb-4">
            <%= link_to show_items_path(item.id) do %>
              <%= image_tag item.get_image(180,120) %><br />
              <p class ="text-dark  mt-2"><%= item.name %></p>
              <p class ="text-dark  mt-2"><%= item.price %></p>
            <% end %>
          </div>
          <% end %>
        </div>
    </div>

  </div>
</div>