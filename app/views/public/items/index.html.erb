<p></p>


<div class ="container">
  <div class ="row mt-5">
    <%= render 'list', genres: @genres %>
    <div class ="col-md-9">
      <h3 class ="font-weight-bold">商品一覧<span class="font-weight-normal">全(<%= @items.count %>)件</span></h3>


        <div class ="mt-3 d-flex flex-wrap">

          <% @items.each do |item| %>
          <div class ="mr-3  mb-4">
            <%= link_to show_items_path(item.id) do %>
              <%= image_tag item.get_image(180,120) %><br />
              <p class ="text-dark  mt-2"><%= item.name %></p>
              <p class ="text-dark  mt-2"><%= item.price %></p>
            <% end %>
          </div>
          <% end %>
        </div>
    </div>

  </div>
</div>