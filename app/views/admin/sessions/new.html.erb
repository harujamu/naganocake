<p></p>
<%= render "admin/shared/links" %>

<div class ="container">
  <div class ="col-md-3">
    <h3 class ="bg-light">管理者ログイン</h3>
  </div>
  <div class ="row">
    <div class ="mx-auto col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class ="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", size:"40" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", size:"40" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>

  </div>
</div>
