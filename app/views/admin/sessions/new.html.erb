<p></p>
<%= render "admin/shared/links" %>

<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
        <h2 class ="bg-secondary">管理者ログイン</h2>
    </div>
  </div>
  <div class ="row">
    <div class ="mx-auto ">
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"" %>
        </div>
        
        <div class="field">
          <%= f.label :パスワード %>   
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        
        <div class="actions">
      　　　<%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
