<p></p>
<%= render "admin/shared/links" %>

<div class ="container">
  <div class ="col-md-2">
    <h3 class ="bg-light">会員一覧</h3>
  </div>
  <div class ="row">
    <div class ="col-md-8 mx-auto">
      <table class ="table">
      <thead class ="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_show_customers_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active %></td>
        </tr>
      </tbody>
      <% end %>
      </table>
      
    </div>
  </div>
</div>