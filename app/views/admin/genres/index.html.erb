<p></p>
<%= render "admin/shared/links" %>

<div class ="container col-md-6">
  <div class ="row">
    <h3 class ="bg-light">ジャンル一覧・追加</h3>
    
    <div class ="col-md-6">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field:name, autocomplete: "name" %>
        <%= f.submit '新規登録', class:"btn btn-success btn-lg" %>
      <% end %>
    </div>
    
    <table class ="table table-striped">
      <tread>
        <tr>
          <th>ジャンル</th>
        </tr>
      </tread>
      <tbody>
        <% @genres. each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する',admin_edit_genres_path, class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>